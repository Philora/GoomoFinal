<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/activity_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/imgPlane"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:src="@drawable/plane" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.35"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/departure"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/sourceText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/da_space"
                    android:layout_margin="2dp"
                    android:textSize="17dp"
                    android:gravity="top"
                    android:textColor="@color/sourceText"/>

                <TextView
                    android:id="@+id/txtEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/arrival"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/sourceText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtStops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nonstop"
                    android:textSize="13dp"
                    android:textColor="@color/stopText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dot"
                    android:padding="2dp"
                    android:textSize="15dp"
                    android:textColor="@color/stopText" />


                <TextView
                    android:id="@+id/txt_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/travel_duration"
                    android:textSize="13dp"
                    android:textColor="@color/stopText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dot"
                    android:padding="2dp"
                    android:textSize="15dp"
                    android:textColor="@color/stopText" />

                <TextView
                    android:id="@+id/txtOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/origin"
                    android:textSize="13dp"
                    android:textColor="@color/stopText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    android:textSize="13dp"
                    android:textColor="@color/stopText" />

                <TextView
                    android:id="@+id/txtDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/destination"
                    android:textSize="13dp"
                    android:textColor="@color/stopText" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtAirlines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/airplane_code"
                android:textSize="14dp"
                android:textColor="@color/planeText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.95">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rs_text"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rs_value"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
